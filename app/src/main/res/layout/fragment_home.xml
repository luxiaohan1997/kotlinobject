<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:canLoop="true"
            app:layout_constraintTop_toTopOf="parent">
    </com.bigkoo.convenientbanner.ConvenientBanner>
    <android.support.design.widget.TabLayout
            android:id="@+id/tabList"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            android:orientation="horizontal"
            app:tabIndicatorFullWidth="false"></android.support.design.widget.TabLayout>
    <LinearLayout
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tabList"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/txt_brand_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="品牌制造商直供"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/newGood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/brand"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/txt_newgood_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="周一周四·新品首发"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_newgood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/hotGood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newGood"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/txt_hotGood_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="人气推荐"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>
        <View android:layout_width="match_parent" android:layout_height="0.5dp"
            android:background="@color/colorGray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_hotgood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hotGood"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/txt_subject_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="专题精选"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>